@model BankApp.Mvc.Models.OpenAccountViewModel

<h2>Open a New Account</h2>

<form asp-action="Create" method="post" class="container mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Customer ID</label>
        <div class="col-sm-10">
            <input asp-for="CustomerId" class="form-control" />
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Initial Credit</label>
        <div class="col-sm-10">
            <input asp-for="InitialCredit" class="form-control" />
            <span asp-validation-for="InitialCredit" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Open Account</button>
    </div>
</form>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
